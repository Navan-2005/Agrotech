  <body style="height: 100vh">
    <div class="container border mt-3 bg-light">
      <div class="row" style="padding-top: 0">
        <div class="col-md-6 p-5 bg-primary text-white">
          <h1 class="intro-heading" style="text-align: start">Hi there,</h1>
          <br /><br />

          <h4 class="intro-text" style="font-size: 30px">
            Just share your name, contact info, and a brief message, and weâ€™ll
            get back to you soon!
          </h4>
        </div>
        <div class="col-md-6 py-3" style="text-align: start">
          <h1>Contact Form</h1>
          <div class="form-group">
            <h5 for="name">Name</h5>
            <input
              type="text"
              class="form-control"
              id="name"
              placeholder="Enter your name"
            />
          </div>
          <div class="form-group">
            <h5 for="email">Email(optional)</h5>
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="Enter your email "
            />
          </div>
          <div class="form-group">
            <h5 for="phone no">Phone No (+91)</h5>
            <input
              type="phone no"
              class="form-control"
              id="phone no"
              placeholder="Enter your Phone no"
            />
          </div>
          <div class="form-group">
            <h5 for="message">Message</h5>
            <textarea
              name="message"
              id="message"
              rows="3"
              class="form-control"
              placeholder="Enter your message"
            ></textarea>
          </div>
          <button
            id="submit"
            class="btn btn-primary"
            onclick="sendMail()"
            href="home.ejs"
          >
            Submit
          </button>
        </div>
      </div>
    </div>
    <script>
      function sendMail() {
        var params = {
          name: document.getElementById("name").value,
          email: document.getElementById("email").value,
          message: document.getElementById("message").value,
          mobile: document.getElementById("phone no").value,
        };

        const serviceID = "service_w07t6vr";
        const templateID = "template_leu4j5t";

        emailjs
          .send(serviceID, templateID, params)
          .then((res) => {
            document.getElementById("name").value = "";
            document.getElementById("email").value = "";
            document.getElementById("message").value = "";
            document.getElementById("phone no").value = "";
            console.log(res);
            alert("Your message was sent successfully!");
          })
          .catch((err) => console.log("Error:", err));
        window.location.href = "http://localhost:8080";
      }
      document.getElementById("button").addEventListener("click", function () {
        window.location.href = "http://localhost:8080";
      });
    </script>
