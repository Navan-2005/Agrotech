    <style>
      /* Page fade-in animation */
      body {
        animation: fadeIn 1.5s ease-in;
      }

      /* Fade-in effect */
      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      /* Container styling */
      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 80px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(87, 228, 136, 0.15);
        background-color: green;
      }

      /* Left section styling */
      .bg-primary {
        color: #fff;
        padding: 20px;
        border-radius: 10px 0 0 10px;
        transition: transform 0.3s ease;
      }

      /* Right section form styling */
      .col-md-6 {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 0 10px 10px 0;
      }

      /* Animations for "Hi there" and "Lorem ipsum..." text */
      .intro-heading,
      .intro-text {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 1s ease forwards;
      }

      /* Staggered delay for text animations */
      .intro-heading {
        animation-delay: 0.3s;
      }
      .intro-text {
        animation-delay: 0.6s;
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Button styling */
      .btn-primary {
        background-color: #2ecc71;
        border: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
      }
      .intro-text {
        text-align: start;
      }

      .btn-primary:hover {
        background-color: #2ecc71;
        transform: translateY(-3px);
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
      }

      /* Form field focus effects */
      .form-control:focus {
        border-color: #2ecc71;
        box-shadow: 0px 0px 5px rgba(0, 255, 21, 0.5);
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
      }
      .row {
        padding-top: 50px;
      }
    </style>
    <style>
      /* Bounce and fade-in effect for the heading */
      @keyframes fadeInBounce {
        0% {
          opacity: 0;
          transform: scale(0.5);
        }
        50% {
          opacity: 0.7;
          transform: scale(1.1);
        }
        100% {
          opacity: 1;
          transform: scale(1);
        }
      }

      .intro-heading {
        animation: fadeInBounce 2s ease-out forwards;
        font-size: 48px;
        font-weight: bold;
      }

      /* Smooth fade-in for the intro text */
      @keyframes fadeIn {
        0% {
          opacity: 0;
          transform: translateY(10px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .intro-text {
        animation: fadeIn 3s ease-in forwards;
        font-size: 30px;
        margin-top: 10px;
      }
    </style>
    <style>
      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
